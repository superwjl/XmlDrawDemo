<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="下面是实线（控件高度必须大于线的宽度）"
        android:textSize="14dp"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layerType="software"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape_line_real"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="下面是虚线（控件高度必须大于线的宽度）"
        android:textSize="14dp"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layerType="software"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape_line_dotted"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="下面是粗实线（线越粗，两边留的空白越大）"
        android:textSize="14dp"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape_line_real_big"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="下面是更粗的实线（线越粗，两边留的空白越大）"
        android:textSize="14dp"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape_line_real_bigger"/>
</LinearLayout>
