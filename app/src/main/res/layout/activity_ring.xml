<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_ring_solid"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_ring_gradient"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_ring_stroke"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_ring_gradient_stroke"/>
        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="3"
            android:gravity="center"
            android:layout_margin="10dp"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/shape_ring_gradient_rotate"/>
    </LinearLayout>
</ScrollView>